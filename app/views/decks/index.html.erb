<h1>Decks</h1>

<table>
  <thead align="left">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Faction</th>
      <!-- <th>Userid</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody align="left">
    <% @decks.each do |deck| %>
      <tr>

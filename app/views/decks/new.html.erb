<h1>Create a deck</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@deck) do |f| %>
      
      <%= f.label :deckName %>
      <%= f.text_field :deckName, class: 'form-control' %>

      <%= f.label :faction %>
      <%= f.text_field :faction, class: 'form-control' %>

      <%= f.submit "Create deck", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
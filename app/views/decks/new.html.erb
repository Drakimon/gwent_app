<h1>Create a deck</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@deck) do |f| %>
      
      <%= f.label "Deck name" %>
      <%= f.text_field :deckName, class: 'form-control' %>

      <%= f.label :faction %>
      <%= f.select :faction, [
        ["Monsters"],
        ["Northern Realms"],
        ["Nilfgaard"],
        ["Scoia'tel"]], {}, {class: 'form-control'} %>

      <%= f.submit "Create deck", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>